---
import SectionHeading from './SectionHeading.astro'
import { getSkills } from '../sanity/sanity-queries'

const skills = await getSkills()
---

<section>
  <SectionHeading heading="Skills" />
  <ul class="mt-6 flex flex-wrap justify-center gap-4">
    {
      skills.map((skill) =>
        skill.link ? (
          <a
            href={skill.link}
            class="hover:text-purple-light dark:hover:text-purple-dark"
            target="_blank"
          >
            <li class="text-md rounded-full bg-gray-300/20 px-4 py-2 md:text-xl">
              {skill.name}
            </li>
          </a>
        ) : (
          <li class="text-md rounded-full bg-gray-300/20 px-4 py-2 dark:text-foreground  md:text-xl">
            {skill.name}
          </li>
        )
      )
    }
  </ul>
</section>
